@page
@model CourseWeb.Pages.Admin.Category.ListCategoryModel
@using CourseDomain.DTOs
@{
    Layout = null;
    ViewData["Title"] = "List of Categories";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
</head>
<body>
    <div class="container">
        <h1 class="text-center">List of Categories</h1>
        <a href="/Admin/Category/Add" class="btn btn-success mb-3">Create Category</a>
        <table class="table table-striped table-bordered">
            <thead class="thead-dark">
                <tr>
                    <th>Category ID</th>
                    <th>Category Name</th>
                    <th>Subcategories</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var category in Model.Categories)
                {
                    <tr>
                        <td>@category.CategoryId</td>
                        <td>@category.CategoryName</td>
                        <td>
                            <ul>
                                @foreach (var subCategory in category.SubCategories)
                                {
                                    <li>@subCategory.SubCategoryName</li>
                                }
                            </ul>
                        </td>
                        <td>
                            <a href="/Admin/Category/Edit?categoryId=@category.CategoryId" class="btn btn-warning btn-sm">Edit</a>
                            <form method="post" asp-page-handler="Delete" style="display:inline;" onsubmit="return confirm('Are you sure you want to delete this category?');">
                                <input type="hidden" name="categoryId" value="@category.CategoryId" />
                                <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        <a href="/Admin/Index" class="btn btn-secondary">Back</a>
    </div>
</body>

